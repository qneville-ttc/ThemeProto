<h1>Available Themes</h1>

<table>
  <tr>
    <th>Theme name</th>
    <th>Theme desc</th>
    <th>Career site</th>
    <th>Theme filename</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @themes.each do |theme| %>
  <tr>
    <td><%= theme.theme_name %></td>
    <td><%= theme.theme_desc %></td>
    <td><%= theme.career_site_id %></td>
    <td><%= theme.theme_filename %></td>
    <td><%= link_to 'Show', theme %></td>
    <td><%= link_to 'Edit', edit_theme_path(theme) %></td>
    <td><%= link_to 'Destroy', theme, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

