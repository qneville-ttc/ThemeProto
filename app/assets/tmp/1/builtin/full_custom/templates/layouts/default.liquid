  <script>

    /* mobile handler */

    $(document).ready(function() {

      //Clamps footer to bottom 
      if($("body").height() < $(window).height()) {
        $("footer").css("position", "absolute");  
      }

      //Initial Window Load
      if($(window).width() < 640) {
        $(".cs_layout_sidebar_large .cs_header").each(function () {
            $(this).css("background-position", "0px 0px");
            $(this).siblings().slideUp(100);
        });
      }     
      //
      $(".cs_layout_sidebar_large .cs_header").click(function() {
          if($(this).hasClass("mui-open")) {
             $(this).removeClass("mui-open");
             $(this).addClass("mui-closed");
              $(this).css("background-position", "0px 0px");
              $(this).siblings().slideUp(100);
          } else if ($(this).hasClass("mui-closed")){
             $(this).removeClass("mui-closed");
             $(this).addClass("mui-open");       
             $(this).css("background-position", "0px -36px");
             $(this).siblings().slideDown(100);        
          } else {
             $(this).removeClass("mui-closed");
             $(this).addClass("mui-open");       
             $(this).css("background-position", "0px -36px");
             $(this).siblings().slideDown(100);    
          }
          
      });
    });
    $(window).resize(function() {
      if($(window).width() > 640) {
        $(".cs_layout_sidebar_large .cs_header").each(function () {
            $(this).removeClass("mui-closed");
            $(this).removeClass("mui-open");
            $(this).siblings().slideDown(100);      
        });
      } else {
        $(".cs_layout_sidebar_large .cs_header").each(function () {
            $(this).css("background-position", "0px 0px");
            $(this).siblings().slideUp(100);
        });
      }

      if($("body").height() < $(window).height()) {
        $("footer").css("position", "absolute");  
      } else {
        $("footer").css("position", "static");  
      }

    });



  </script>

