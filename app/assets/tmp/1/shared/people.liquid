{% page_required_header %}

  <div class="breadcrumbs">
      <a href="{{ root_url }}">Career Site</a> /
      <span>People</span>
  </div>

  <h2>People</h2>
  {% for person in employer.people %}
    {% if person.photo %}
    <div class="entry item clearfix">
    {% else %}
    <div class="entry item clearfix photo_empty">
    {% endif %}
      
      {% if person.photo %}
        <span class="photo"><img src="{{ person.photo.url }}" alt="{{ h(person.name) }}" /></span>
      {% else %}
        <span class="photo"><img src="/images/site_assets/photo_unknown.gif" alt="{{ h(person.name) }}" /></span>
      {% endif %}
      
      <div class="profile">
        <h3>{{ person | link_to_person }}</h3>
        
        <small>{{ person.position }}</small>
        
        {% person_affiliations %}
        
        <div class="item_content">
          {{ person.description | truncate_html(300) }}
        </div>
        
        <p class="more">{{ person | link_to_person: "Learn More" }} &raquo;</p>
      </div>
      
    </div>
  {% endfor %}
  
{% page_required_footer %}

